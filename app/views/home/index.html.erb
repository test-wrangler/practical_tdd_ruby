<ul>
  <% @cart.errors.messages.each do |message_array| %>
    <li><%= message_array[1][0] %></li>
  <% end %>
</ul>
<%= form_for @cart do |f| %>
  <h1>Menu Items</h1>
  <%= f.collection_check_boxes(:menu_item_ids, MenuItem.all, :id, :name, include_hidden: false) do |b| %>
    <div class="Home--MenuItem">
      <%= b.label("data-value": b.value) { b.check_box + b.text } %>
    </div>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>